// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

enum Status {
  active
  closed
}

enum Identity {
  identity_card
  driver_license
  other
}

model users {
  id            String     @id @unique
  email         String     @unique
  username      String     @unique
  password      String
  role          Role       @default(user)
  created_at    DateTime   @default(now())
  updated_at    DateTime?  @updatedAt
  profiles      profiles?
  bank_accounts accounts[]
}

model profiles {
  id              String    @id @unique
  user_id         String    @unique
  fullname        String
  identity_type   Identity  @default(identity_card)
  identity_number String    @unique
  address         String    @db.Text
  created_at      DateTime  @default(now())
  updated_at      DateTime? @updatedAt
  user            users     @relation(fields: [user_id], references: [id])
}

model accounts {
  id               String         @id @unique
  account_number   String         @unique
  user_id          String
  balance          Float          @db.DoublePrecision
  status           Status         @default(active)
  created_at       DateTime       @default(now())
  updated_at       DateTime?      @updatedAt
  user             users          @relation(fields: [user_id], references: [id])
  transaction_from transactions[] @relation("TransactionFrom")
  transaction_to   transactions[] @relation("TransactionTo")
}

model transactions {
  id                          String    @id @unique
  amount                      Float     @db.DoublePrecision
  source_account_number       String
  destination_account_number  String
  transaction_date            DateTime  @default(now())
  from_account                accounts  @relation("TransactionFrom", fields: [source_account_number], references: [account_number])
  to_account                  accounts  @relation("TransactionTo", fields: [destination_account_number], references: [account_number])
}
